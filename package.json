{
  "name": "vue3-h5-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "preview": "vite preview",
    "serve": "vite --host",
    "build": "vue-tsc --noEmit -p tsconfig.app.json --composite false && vite build",
    "serve:mock": "cross-env VITE_APP_ENV=mock npm run serve",
    "serve:alpha": "cross-env VITE_APP_ENV=alpha npm run serve",
    "serve:rc": "cross-env VITE_APP_ENV=rc npm run serve",
    "serve:prod": "cross-env VITE_APP_ENV=prod npm run serve",
    "build:mock": "cross-env VITE_APP_ENV=mock npm run build",
    "build:alpha": "cross-env VITE_APP_ENV=alpha npm run build",
    "build:rc": "cross-env VITE_APP_ENV=rc npm run build",
    "build:prod": "cross-env VITE_APP_ENV=prod npm run build",
    "lint": "npm run lint:js && npm run lint:css",
    "lint:js": "eslint --ext .js,.ts,.vue ./src",
    "lint:css": "stylelint ./src/**/*.{css,less,sass,scss,vue}",
    "format": "npm run format:js && npm run format:css",
    "format:js": "eslint --fix --ext .js,.ts,.vue ./src",
    "format:css": "stylelint --fix --allow-empty-input ./src/**/*.{css,less,sass,scss,vue}",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "type-check": "vue-tsc --noEmit -p tsconfig.app.json --composite false"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "pinia": "^2.0.36",
    "pinia-plugin-persistedstate": "^3.1.0",
    "vant": "^4.4.1",
    "vconsole": "^3.15.0",
    "vue": "^3.3.2",
    "vue-router": "^4.2.0"
  },
  "devDependencies": {
    "@sxwy/commitlint-config": "^1.4.0",
    "@sxwy/eslint-config-vue": "^1.6.0",
    "@sxwy/prettier-config": "^1.5.0",
    "@sxwy/stylelint-config": "^1.7.0",
    "@tsconfig/node18": "^2.0.1",
    "@types/node": "^18.16.8",
    "@vitejs/plugin-legacy": "^4.0.4",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/tsconfig": "^0.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.41.0",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "mocker-api": "^2.9.8",
    "mockjs": "^1.1.0",
    "postcss-px-to-viewport-8-plugin": "^1.2.2",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "sass-loader": "^13.3.1",
    "stylelint": "^15.6.2",
    "terser": "^5.17.6",
    "typescript": "~5.0.4",
    "vite": "^4.3.5",
    "vue-tsc": "^1.6.4"
  },
  "resolutions": {
    "esbuild": "npm:esbuild-wasm@latest"
  }
}
